{
  "name": "vercube-monorepo",
  "version": "0.0.0",
  "description": "An ultra-efficient JavaScript server framework that runs anywhere - Node.js, Bun, or Deno - with unmatched flexibility and complete configurability for developers who refuse to sacrifice speed or control.",
  "packageManager": "pnpm@10.26.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "nx run-many -t build --exclude=playground",
    "dev": "nx watch --all --exclude=playground -- nx run \\$NX_PROJECT_NAME:build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:bench": "vitest bench --run",
    "test:tscheck": "tsgo --noEmit",
    "test:lint": "oxlint . --type-check && oxfmt --check",
    "lint:fix": "oxlint --fix . && oxfmt --no-error-on-unmatched-pattern",
    "pre-commit": "lint-staged",
    "postinstall": "simple-git-hooks",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "playground": "cd playground && pnpm dev",
    "bench": "node .bench/_run.mjs",
    "release": "pnpm release:nx",
    "release:nx": "pnpm nx release --yes"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "oxlint --fix",
      "oxfmt --no-error-on-unmatched-pattern"
    ]
  },
  "devDependencies": {
    "@codspeed/vitest-plugin": "5.0.1",
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@nx/js": "22.3.1",
    "@oxc-project/runtime": "0.104.0",
    "@types/node": "25.0.3",
    "@typescript/native-preview": "7.0.0-dev.20251218.3",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "4.0.16",
    "changelogen": "0.6.2",
    "lint-staged": "16.2.7",
    "nx": "22.3.1",
    "oxfmt": "^0.19.0",
    "oxlint": "1.34.0",
    "renovate": "42.64.1",
    "simple-git-hooks": "2.13.1",
    "tsdown": "0.18.1",
    "tslib": "2.8.1",
    "vitepress": "1.6.4",
    "vitest": "4.0.16"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm pre-commit",
    "commit-msg": "pnpm commitlint --edit $1",
    "pre-push": "pnpm test"
  }
}
