{
  "name": "vercube-monorepo",
  "version": "0.0.43",
  "description": "An ultra-efficient JavaScript server framework that runs anywhere - Node.js, Bun, or Deno - with unmatched flexibility and complete configurability for developers who refuse to sacrifice speed or control.",
  "packageManager": "pnpm@10.28.2",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "turbo run build --filter='./packages/*'",
    "dev": "turbo watch build --filter='./packages/*'",
    "test": "vitest run",
    "test:all": "pnpm test && pnpm test:tscheck && pnpm test:lint",
    "test:coverage": "vitest run --coverage",
    "test:bench": "vitest bench --run",
    "test:tscheck": "tsgo --noEmit",
    "test:lint": "oxlint . --type-check && oxfmt --check",
    "lint:fix": "oxlint --fix . && oxfmt --no-error-on-unmatched-pattern",
    "pre-commit": "lint-staged",
    "postinstall": "simple-git-hooks",
    "playground": "cd playground && pnpm dev",
    "release": "bumpp"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "oxlint --fix",
      "oxfmt --no-error-on-unmatched-pattern"
    ]
  },
  "devDependencies": {
    "@codspeed/vitest-plugin": "5.1.0",
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@oxc-project/runtime": "catalog:",
    "@types/node": "25.2.2",
    "@typescript/native-preview": "7.0.0-dev.20260208.1",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "bumpp": "10.4.1",
    "lint-staged": "16.2.7",
    "oxfmt": "0.28.0",
    "oxlint": "1.43.0",
    "renovate": "43.4.2",
    "simple-git-hooks": "2.13.1",
    "tsdown": "0.20.3",
    "tslib": "2.8.1",
    "turbo": "^2.8.3",
    "vitest": "4.0.18"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm pre-commit",
    "commit-msg": "pnpm commitlint --edit $1",
    "pre-push": "pnpm test && pnpm test:tscheck"
  }
}
