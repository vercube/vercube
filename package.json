{
  "name": "vercube-monorepo",
  "version": "0.0.0",
  "description": "An ultra-efficient JavaScript server framework that runs anywhere - Node.js, Bun, or Deno - with unmatched flexibility and complete configurability for developers who refuse to sacrifice speed or control.",
  "packageManager": "pnpm@10.17.1",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "nx run-many -t build --exclude=playground",
    "dev": "nx watch --all --exclude=playground -- nx run \\$NX_PROJECT_NAME:build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:bench": "vitest bench --run",
    "test:tscheck": "tsgo --noEmit",
    "test:lint": "oxlint . && prettier --check .",
    "lint:fix": "oxlint --fix . && prettier --write .",
    "pre-commit": "lint-staged",
    "postinstall": "simple-git-hooks",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "playground": "cd playground && pnpm dev",
    "bench": "node .bench/_run.mjs",
    "release": "pnpm release:nx",
    "release:nx": "pnpm nx release --yes"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "oxlint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@codspeed/vitest-plugin": "5.0.1",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@nx/js": "22.0.2",
    "@oxc-project/runtime": "0.96.0",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/node": "24.9.2",
    "@typescript/native-preview": "7.0.0-dev.20251030.1",
    "@vitest/coverage-v8": "4.0.5",
    "@vitest/ui": "4.0.5",
    "changelogen": "0.6.2",
    "lint-staged": "16.2.6",
    "nx": "22.0.2",
    "oxlint": "1.25.0",
    "prettier": "3.6.2",
    "prettier-plugin-imports": "4.3.3",
    "renovate": "41.165.6",
    "simple-git-hooks": "2.13.1",
    "tsdown": "0.15.12",
    "tslib": "2.8.1",
    "vitepress": "1.6.4",
    "vitest": "4.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm pre-commit",
    "commit-msg": "pnpm commitlint --edit $1",
    "pre-push": "pnpm test"
  }
}
