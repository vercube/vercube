{
  "name": "cube-monorepo",
  "version": "0.0.0",
  "description": "Next generation NodeJS framework on top of H3",
  "packageManager": "pnpm@9.10.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "turbo": "turbo",
    "build": "turbo build --filter=!playground",
    "dev": "turbo dev --filter=!playground",
    "test": "turbo test --filter=!playground",
    "lint": "oxlint --config=oxlintrc.json --fix",
    "prepare": "husky",
    "docs:dev": "vitepress dev doc",
    "docs:build": "vitepress build doc",
    "docs:preview": "vitepress preview doc"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@rollup/plugin-typescript": "12.1.0",
    "@types/node": "20",
    "globals": "15.9.0",
    "husky": "9.1.6",
    "oxlint": "0.9.9",
    "tslib": "2.7.0",
    "turbo": "2.1.2",
    "typescript": "5.6.2",
    "typescript-eslint": "8.7.0",
    "unbuild": "3.0.0-rc.8",
    "vitepress": "1.3.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "picomatch"
      ]
    }
  }
}