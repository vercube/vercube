{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "declaration": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "importHelpers": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es6",
      "es2017",
      "es2019",
      "ESNext"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@vercube/*": [
        "packages/*/src"
      ],
      "@vercube/logger/providers/*": [
        "packages/logger/src/Providers/*"
      ],
      "nx": [
        "packages/nx/src/index.ts"
      ]
    }
  },
  "include": [
    "packages/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
